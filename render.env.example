# Emergency Environment Variables for Render Deployment
# Add these to your Render service environment variables

# Database Configuration
DATABASE_URL=your_supabase_database_url_here
DB_HOST=your_supabase_host_here
DB_PORT=5432
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=your_supabase_password_here

# JWT Secrets (generate new ones for production)
ACCESS_SECRET=your_access_secret_here
REFRESH_SECRET=your_refresh_secret_here
SSO_SECRET=your_sso_secret_here

# API Configuration
API_KEY=your_api_key_here

# Redis Configuration (if using Redis)
REDIS_URL=your_redis_url_here

# Application Configuration
NODE_ENV=production
LOG_LEVEL=info
PORT=10000

# Company Context (for multi-tenancy)
DEFAULT_COMPANY_ID=1

# Security Configuration
CORS_ORIGIN=https://magsuite-0wj4.onrender.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_DIR=/tmp

# Email Configuration (if using email features)
SMTP_HOST=your_smtp_host_here
SMTP_PORT=587
SMTP_USER=your_smtp_user_here
SMTP_PASS=your_smtp_password_here
FROM_EMAIL=noreply@magsuite.com

# Monitoring and Logging
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_PATH=/health

# Feature Flags
ENABLE_MFA=true
ENABLE_SSO=false
ENABLE_AUDIT_LOGS=true
ENABLE_CACHE=true

# Performance Configuration
CONNECTION_POOL_SIZE=10
QUERY_TIMEOUT=30000
CACHE_TTL=3600

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
